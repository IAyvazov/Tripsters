@using Tripsters.Web.ViewModels.Trips
@model TripsViewModel
@{
    ViewData["Title"] = "Edit Trip";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-4">
    <form asp-action="EditTip" method="post">
        <h4>Edit trip.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FromTown"></label>
            <input asp-for="FromTown" class="form-control" value="@Model.FromTown" />
            <span asp-validation-for="FromTown" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ToTown"></label>
            <input asp-for="ToTown" class="form-control" />
            <span asp-validation-for="ToTown" class="text-danger" value="@Model.ToTown"></span>
        </div>
        <div class="form-group">
            <label asp-for="AvailableSeats"></label>
            <input asp-for="AvailableSeats" class="form-control" value="@Model.AvailableSeats" />
            <span asp-validation-for="AvailableSeats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" value="@Model.StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" value="@Model.Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" value="@Model.Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning">Edit</button>
    </form>
</div>
