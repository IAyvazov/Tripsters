@using Tripsters.Services.Data.Trips.Models

@model TripServiceModel

@{
    ViewData["Title"] = "Edit Trip";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-4">
    <form asp-action="EditTrip" method="post">
        <h4>Edit trip.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="From"></label>
            <input asp-for="From" class="form-control" value="@Model.From" />
            <span asp-validation-for="From" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="To"></label>
            <input asp-for="To" class="form-control" />
            <span asp-validation-for="To" class="text-danger" value="@Model.To"></span>
        </div>
        <div class="form-group">
            <label asp-for="AvailableSeats"></label>
            <input asp-for="AvailableSeats" class="form-control" value="@Model.AvailableSeats" />
            <span asp-validation-for="AvailableSeats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" value="@Model.StartDate" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" value="@Model.Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group" hidden>
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control" value="@Model.Id" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning">Edit</button>
    </form>
</div>
