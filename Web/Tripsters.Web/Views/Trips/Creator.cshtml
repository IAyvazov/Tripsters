@using Tripsters.Web.ViewModels.Users

@model UserViewModel

@{
    ViewData["Title"] = "Creator";
}

<h1>@ViewData["Title"]</h1>

<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link " href="/Trips/Details?tripId=@Model.CurrentTripId">Trip info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/Trips/Creator?creatorId=@Model.Id">Creator info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Trips/Members?tripId=@Model.CurrentTripId">Members</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="/Trips/Photo?tripId={2}">Photos</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <h3 class="card-title">@Model.UserName</h3>
        <h5 class="card-text">Age: @Model.Age </h5>
        <h5 class="card-text">From: @Model.HomeTown</h5>
        <h5 class="card-text">Badges: @string.Join(",", Model.Badges.Select(b => b.Name))</h5>
        <h5 class="card-text">Mutual friends: @Model.MutualFriends.Count</h5>
    </div>
</div>