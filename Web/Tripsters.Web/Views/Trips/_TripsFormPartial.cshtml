@using Tripsters.Web.ViewModels.Trips

@model TripsInputFormModel


<div class="col-md-4">
    <form method="post">
        <hr />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Adventure time" />
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="From"></label>
            <input asp-for="From" class="form-control" placeholder="Sofia" />
            <span asp-validation-for="From" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="To"></label>
            <input asp-for="To" class="form-control" placeholder="Plovdiv" />
            <span asp-validation-for="To" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AvailableSeats"></label>
            <input asp-for="AvailableSeats" class="form-control" placeholder="1" />
            <span asp-validation-for="AvailableSeats" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" asp-format="{0:dd/MM/yyyy HH:mm}" date-val="true" class="form-control" />
            <span asp-validation-for="StartDate" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Some description for the trip."></textarea>
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
