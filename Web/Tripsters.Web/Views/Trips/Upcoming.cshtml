@using Tripsters.Web.ViewModels.Trips

@model TripsUpcomingListingViewModel

@{
    ViewData["Title"] = "Upcoming trip";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-sm alert-danger">
            Today

            <div class="container">
                @foreach (var trip in Model.TodayTrips)
                {
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">
                                @trip.Name
                            </h3>

                            <h5 class="card-text">
                                @trip.CreatorName
                            </h5>

                            <p class="card-text">
                                @trip.FromTown
                            </p>

                            <p class="card-text">
                                @trip.ToTown
                            </p>

                            <p class="card-text">
                                @trip.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm alert-primary">
            Tomorrow
            <div class="container">
                @foreach (var trip in Model.TomorrowTrips)
                {
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">
                                @trip.Name
                            </h3>

                            <h5 class="card-text">
                                @trip.CreatorName
                            </h5>

                            <p class="card-text">
                                @trip.FromTown
                            </p>

                            <p class="card-text">
                                @trip.ToTown
                            </p>

                            <p class="card-text">
                                @trip.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm alert-success">
            The day after

            <div>

            </div>
        </div>
    </div>
</div>