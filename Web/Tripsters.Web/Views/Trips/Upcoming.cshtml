@using Tripsters.Web.ViewModels.Trips

@model TripsUpcomingListingViewModel

@{
    ViewData["Title"] = "Upcoming trip";
}

<h1>@ViewData["Title"]</h1>

<ul class="nav justify-content-center">
    <li class="nav-item">
        <a class="nav-link active" href="/Trips/MyTrips">Made by me</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Trips/Upcoming">Upcoming</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Trips/Past">Past</a>
    </li>
</ul>

<div class="container">
    <div class="row">
        <div class="col-sm alert-danger">
            Today

            <div class="container">
                @foreach (var trip in Model.TodayTrips)
                {
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">
                                @trip.Name
                            </h3>

                            <h5 class="card-text">
                                @trip.CreatorName
                            </h5>

                            <p class="card-text">
                                @trip.FromTown
                            </p>

                            <p class="card-text">
                                @trip.ToTown
                            </p>

                            <p class="card-text">
                                @trip.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm alert-primary">
            Tomorrow
            <div class="container">
                @foreach (var trip in Model.TomorrowTrips)
                {
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">
                                @trip.Name
                            </h3>

                            <h5 class="card-text">
                                @trip.CreatorName
                            </h5>

                            <p class="card-text">
                                @trip.FromTown
                            </p>

                            <p class="card-text">
                                @trip.ToTown
                            </p>

                            <p class="card-text">
                                @trip.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm alert-success">
            Future

            <div class="container">
                @foreach (var trip in Model.TheDayAfterTrips)
                {
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">
                                @trip.Name
                            </h3>

                            <h5 class="card-text">
                                @trip.CreatorName
                            </h5>

                            <p class="card-text">
                                @trip.FromTown
                            </p>

                            <p class="card-text">
                                @trip.ToTown
                            </p>

                            <p class="card-text">
                                @trip.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>