@using Tripsters.Web.ViewModels.Trips

@model TripsViewModel

@{
    ViewData["Title"] = "Trip";
}

<h1>@ViewData["Title"]</h1>

<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link " href="/Trips/More?tripId=@Model.Id">Trip info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="/Users/Info?creatorId=@Model.CreatorId&userId=@Model.CurrentUserId&currTripId=@Model.Id">Creator info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/Trips/Members?tripId=@Model.Id">Members (@Model.Members.Count)</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="/Trips/Photo?tripId={2}">Photos</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <ul>
            @foreach (var member in Model.Members)
            {
            <li>
                <h3 class="card-title">@member.UserName</h3>
                <h5 class="card-text">Age: @member.Age</h5>
                <h5 class="card-text">From: @member.HomeTown</h5>
                <h5 class="card-text">Badges: @string.Join(",", member.Badges)</h5>
            </li>
            }
        </ul>
    </div>
</div>